{% extends "../ncctemplate.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% block pageTitle %} Update Post - Northumberland city council - GOV.UK {% endblock %}

{% block content %}

  <h1 class="govuk-heading-l"> Edit Post </h1>

  <form action="/updatePost/{{results[0].id}}" method="post">

  {{ govukInput({
  label: {
    text: "User id:"
  },
  classes: "govuk-input--width-10 govuk-input--extra-letter-spacing",
  id: "userid",
  name: "userid",
  value:  results[0].userId,
  autocomplete: "name",
  spellcheck: false
}) }}

{{ govukInput({
  label: {
    text: "Title"
  },
  classes: "govuk-input--width-10 govuk-input--extra-letter-spacing",
  id: "commenttitle:",
  name: "commenttitle",
  value: results[0].title,
  spellcheck: false
}) }}

{{ govukTextarea({
  name: "comment",
  id: "comment",
  classes: "govuk-input--width-8 govuk-input--extra-letter-spacing",
  value: results[0].body,
  label: {
    text: "Comment:"
  }
}) }}

{{ govukButton({
  text: "update and continue"
}) }}

</form>



{% endblock %}